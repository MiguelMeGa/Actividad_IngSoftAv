package paquete;

public class calculadora {

	public calculadora()
	{
		
		
	}
	
	////////////////////////////////////////
	//             Método de la suma
	////////////////////////////////////////
	
	public double suma (double a, double b)
	{
		
		return a+b;//Se devuelve la suma de a +b
	}
	
	//////////////////////////////////////////
	// 			Método para la resta
	/////////////////////////////////////////
	
	public double resta(double a, double b)
	{
		return a-b;
	}
	
	///////////////////////////////////////////
	// 		Método para la multiplicación
	//////////////////////////////////////////
	
	public double multiplicacion(double a, double b)
	{
		return a*b;
	}
	
	
	//////////////////////////////////////////
	// Método para la división
	///////////////////////////////////////////
	
	public double division(double a, double b)
	{
		return a/b;
	}
	
	
	/////////////////////////////////////////////
	//Método para la raíz cuadrada de un número
	////////////////////////////////////////////
	
	public double raiz(double a)
	{
		double resultado,aprox1=0,aprox2=0;
		int aprox=0,candidato=0;
		
		//Se comienza por el 0
		while((aprox*aprox)<a)
		{ 
			candidato=0;
			aprox+=1;   //Se suma una unidad 
		}
		
		//Primeramente encontramos un número que multiplicado por si mismo se acerque al número a
		aprox1=(candidato*candidato*candidato*candidato+6*(candidato*candidato)*a+(a*a))/(4*candidato*candidato*candidato+4*candidato*a);
		
		resultado=aprox1;
		return resultado;
		
	}
	
	
}
